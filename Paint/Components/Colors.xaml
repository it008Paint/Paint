<UserControl x:Class="Paint.Components.Colors"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Paint.Components"
             mc:Ignorable="d" Width="200" Height="80">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Width="30" Height="30" Background="Black"/>

        <Button Grid.Row="0" Grid.Column="1" Width="30" Height="30" Background="White"/>

        <Button Grid.Row="0" Grid.Column="2" Width="30" Height="30" Background="#800000"/>

        <Button Grid.Row="0" Grid.Column="3" Width="30" Height="30" Background="Red"/>

        <Button Grid.Row="0" Grid.Column="4" Width="30" Height="30" Background="Orange"/>

        <Button Grid.Row="1" Grid.Column="0" Width="30" Height="30" Background="Yellow"/>

        <Button Grid.Row="1" Grid.Column="1" Width="30" Height="30" Background="Green"/>

        <Button Grid.Row="1" Grid.Column="2" Width="30" Height="30" Background="Aqua"/>

        <Button Grid.Row="1" Grid.Column="3" Width="30" Height="30" Background="Blue"/>

        <Button Grid.Row="1" Grid.Column="4" Width="30" Height="30" Background="Pink"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" Text="Colors" HorizontalAlignment="Center" Margin="0,5,0,0"/>
    </Grid>
</UserControl>
