<Window x:Class="Paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:components="clr-namespace:Paint.Components"
        xmlns:local="clr-namespace:Paint"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1280" MinWidth="1280" MinHeight="300"
        KeyDown="Window_KeyDown"
        Focusable="True">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>


        <!-- Menu -->
        <components:Menu_bar x:Name="MainMenu" Grid.Row="0" HorizontalAlignment="Left"/>

        <!-- Tools váº½ cÆ¡ báº£n -->
        <Grid Grid.Row="1" Background="#E0E0E0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="148*"/>
                <ColumnDefinition Width="197*"/>
                <ColumnDefinition Width="279*"/>
                <ColumnDefinition Width="164*"/>
                <ColumnDefinition Width="492*"/>
            </Grid.ColumnDefinitions>

            <!-- Tool -->
            <components:SimpleTools x:Name="SimpleToolsRef" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="80" Width="128"/>
            <!-- Shapes -->
            <components:Shapes x:Name="currentshape" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="81" Width="160"/>
            <!-- Colors -->
            <components:Colors x:Name="currentcolor" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="80" Width="260"/>
            <!-- thickness -->
            <Grid  Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock x:Name="thicknesstextblock" VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="15" 
                           Text="{Binding Value,ElementName=thicknessslider, StringFormat='{}{0:F1}'}" Margin="0,59,0,0" Grid.RowSpan="2"/>
                <Slider Grid.Row="0" x:Name="thicknessslider" VerticalAlignment="Top" Maximum="50" Minimum="1" Margin="0,36,0,0"></Slider>
                <TextBlock Grid.Row="1" Text="Thickness" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,11,0,0"/>
            </Grid>
            <!-- NÃ¢ng cao -->
            <Grid Grid.Column="4">
                <!--layer-->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="2" Margin="5,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.45*"/>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="0.6*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Layers" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <ListBox Grid.Row="1" x:Name="LayersListBox" Height="70" Width="420" SelectionChanged="LayersListBox_SelectionChanged" HorizontalContentAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Column="0" IsChecked="{Binding IsVisible}" VerticalAlignment="Center" Margin="0,0,5,0" ToolTip="Show/Hide">
                                            <TextBlock Text="ðŸ‘" FontSize="14"/>
                                        </CheckBox>

                                        <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" FontWeight="SemiBold"/>

                                        <Button Grid.Column="2" Content="âŒ" Width="20" Height="20" Background="Transparent" BorderBrush="Transparent" Foreground="Red"
                    Click="DeleteLayer_Click" Tag="{Binding}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Button Grid.Row="2" Content="+ New Layer" Height="22" Width="420" Click="AddLayer_Click" Background="#DDDDDD"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <!-- Canva váº½ -->
        <Grid Grid.Row="2" Background="#f2f2f2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="25*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="25*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Row="1" Grid.Column="1" 
                          x:Name="CanvasScrollViewer"
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Auto"
                          PreviewMouseRightButtonDown="CanvasScrollViewer_MouseDown"
                          PreviewMouseMove="CanvasScrollViewer_MouseMove"
                          PreviewMouseRightButtonUp="CanvasScrollViewer_MouseUp"
                          PreviewMouseWheel="CanvasScrollViewer_PreviewMouseWheel">
                <Grid>

                    <Canvas
                     Background="White" x:Name="PaintSurface"
                     Width="1500" Height="1000"
                     Mouse.MouseDown="canvas_MouseDown" 
                     Mouse.MouseMove="canvas_MouseMove" 
                       Mouse.MouseUp="canvas_MouseUp">
                        <components:Selection x:Name="SelectionTool"
                      IsHitTestVisible="False"/>
                    </Canvas>

                </Grid>


            </ScrollViewer>



        </Grid>

        <!-- Thanh dÆ°á»›i -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <ComboBox x:Name="ZoomPreset" Margin="20,0">
                <ComboBoxItem Content="200%"/>
                <ComboBoxItem Content="150%"/>
                <ComboBoxItem Content="125%" IsSelected="True"/>
                <ComboBoxItem Content="100%"/>
                <ComboBoxItem Content="75%"/>
                <ComboBoxItem Content="50%"/>
                <ComboBoxItem Content="25%"/>
            </ComboBox>
            <Button x:Name="ZoomOutButton" Width="20" Height="20">
                <fa:IconImage Icon="SearchMinus"/>
            </Button>
            <Slider x:Name="ZoomSlider" Width="120" Margin="20,0" ToolTip="Zoom" VerticalAlignment="Center" Minimum="0.25" Maximum="2.0" Value="1.0"/>
            <Button x:Name="ZoomInButton" Width="20" Height="20" Margin="0,0,30,0">
                <fa:IconImage Icon="SearchPlus"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
