<Window x:Class="Paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:components="clr-namespace:Paint.Components"
        xmlns:local="clr-namespace:Paint"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" MinHeight="720" MinWidth="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <!-- Menu -->
        <components:Menu_bar x:Name="MainMenu" Grid.Row="0" HorizontalAlignment="Left"/>

        <!-- Tools vẽ cơ bản -->
        <Grid Grid.Row="1" Background="#E0E0E0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <!-- Tool -->
            <components:SimpleTools Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <!-- Shapes -->
            <components:Shapes x:Name="currentshape" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <!-- Colors -->
            <components:Colors Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <!-- Nâng cao -->
            <Grid Grid.Column="3">

            </Grid>
        </Grid>

        <!-- Canva vẽ -->
        <Grid Grid.Row="2" Background="#f2f2f2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="25*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="25*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Canvas Grid.Row="1" Grid.Column="1" Background="White" x:Name="PaintSurface"
                    Mouse.MouseDown="canvas_MouseDown" Mouse.MouseMove="canvas_MouseMove" Mouse.MouseUp="canvas_MouseUp">

            </Canvas>
        </Grid>

        <!-- Thanh dưới -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <ComboBox Margin="20,0">
                <ComboBoxItem Content="200%"/>
                <ComboBoxItem Content="150%"/>
                <ComboBoxItem Content="125%" IsSelected="True"/>
                <ComboBoxItem Content="100%"/>
                <ComboBoxItem Content="75%"/>
                <ComboBoxItem Content="50%"/>
                <ComboBoxItem Content="25%"/>
            </ComboBox>
            <Button Width="20" Height="20">
                <fa:IconImage Icon="SearchMinus"/>
            </Button>
            <Slider Width="120" Margin="20,0" ToolTip="Zoom" VerticalAlignment="Center"/>
            <Button Width="20" Height="20" Margin="0,0,30,0">
                <fa:IconImage Icon="SearchPlus"/>
            </Button>
        </StackPanel>
     
    </Grid>
</Window>
