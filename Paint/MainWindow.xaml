<Window x:Class="Paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:components="clr-namespace:Paint.Components"
        xmlns:local="clr-namespace:Paint"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="90"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>


        <!-- Menu -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#E0E0E0" VerticalAlignment="Center" Height="30" HorizontalAlignment="Left">
            <Menu>
                <MenuItem Header="File" FontSize="15">
                    <MenuItem Header="New"/>
                    <MenuItem Header="Open"/>
                    <MenuItem Header="Save"/>
                    <MenuItem Header="Save as">
                        <MenuItem Header="PNG picture"/>
                        <MenuItem Header="JPEG picture"/>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Print"/>
                    <MenuItem Header="Exit"/>
                </MenuItem>
            </Menu>
            <Menu>
                <MenuItem Header="Edit" FontSize="15">
                    <MenuItem Header="Cut"/>
                    <MenuItem Header="Copy"/>
                    <MenuItem Header="Paste"/>
                </MenuItem>
            </Menu>
        </StackPanel>

        <!-- Tools vẽ cơ bản -->
        <Grid Grid.Row="1" Background="#E0E0E0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="314"/>
                <ColumnDefinition Width="546"/>
            </Grid.ColumnDefinitions>

            <!-- Tool -->
            <components:SimpleTools Grid.Column="0" HorizontalAlignment="Center"/>
            <!-- Shapes -->
            <components:Shapes Grid.Column="1" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            <!-- Colors -->
            <components:Colors Grid.Column="2" HorizontalAlignment="Center"/>
            <!-- Nâng cao -->
            <Grid Grid.Column="3">

            </Grid>
        </Grid>

        <!-- Canva vẽ -->
        <Canvas Grid.Row="2">

        </Canvas>

        <Slider Grid.Row="3" Width="120" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="40,0" ToolTip="Zoom"/>


    </Grid>
</Window>
